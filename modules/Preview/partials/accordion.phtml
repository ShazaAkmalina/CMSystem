<?php
namespace Redaxscript;

$suffix = $admin ? '-admin' : '-default';
$titlePartialElement = new Html\Element();
$titlePartialElement->init('h3', array(
	'class' => 'rs-title-preview-sub'
));
$setElement = new Html\Element();
$setElement->init('div', array(
	'class' => 'rs-js-set-accordion rs-set-accordion rs-set-accordion' . $suffix
));
$titleElement = new Html\Element();
$titleElement->init('h3', array(
	'class' => 'rs-js-title-accordion rs-title-accordion rs-title-accordion' . $suffix
));
$boxElement = new Html\Element();
$boxElement->init('div', array(
	'class' => 'rs-js-box-accordion rs-box-accordion rs-box-accordion' . $suffix
));
?>

<!-- accordion -->

<?php echo $titlePartialElement->text('.rs-title-accordion' . $suffix . ' + .rs-box-accordion' . $suffix); ?>

<div class="rs-js-accordion rs-accordion">

	<!-- first -->

	<?php echo $setElement
		->copy()
		->addClass('rs-js-set-active rs-set-active')
		->html(
			$titleElement
				->copy()
				->addClass('rs-js-title-active rs-title-active')
				->text(Language::get('first')) .
			$boxElement
				->copy()
				->addClass('rs-js-box-active rs-box-active')
				->text(Language::get('first'))
		); ?>

	<!-- number -->

	<?php for ($i = 2; $i < 5; $i++): ?>

		<?php echo $setElement->html(
			$titleElement->text(Language::get($i, '_number')) .
			$boxElement->text(Language::get($i, '_number'))
		); ?>

	<?php endfor; ?>

	<!-- last -->

	<?php echo $setElement
		->copy()
		->html(
			$titleElement->text(Language::get('last')) .
			$boxElement->text(Language::get('last'))
		); ?>
</div>
