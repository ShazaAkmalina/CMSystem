<?php
namespace Redaxscript;

$prefix = $admin ? 'rs-admin-' : 'rs-';
$titlePartialElement = new Html\Element();
$titlePartialElement->init('h3', array(
	'class' => 'rs-title-preview-sub'
));
$setElement = new Html\Element();
$setElement->init('div', array(
	'class' => $prefix . 'js-set-accordion ' . $prefix . 'set-accordion'
));
$titleElement = new Html\Element();
$titleElement->init('h3', array(
	'class' => $prefix . 'js-title-accordion ' . $prefix . 'title-accordion'
));
$boxElement = new Html\Element();
$boxElement->init('div', array(
	'class' => $prefix . 'js-box-accordion ' . $prefix . 'box-accordion'
));
?>

<!-- accordion -->

<?php echo $titlePartialElement->text('.' . $prefix . 'title-accordion + .' . $prefix . 'box-accordion'); ?>

<div class="<?php echo $prefix . 'js-accordion ' . $prefix . 'accordion'; ?>">

	<!-- first -->

	<?php echo $setElement
		->copy()
		->addClass($prefix . 'js-set-active ' . $prefix . 'set-active')
		->html(
			$titleElement
				->copy()
				->addClass($prefix . 'js-title-active ' . $prefix . 'title-active')
				->text(Language::get('first')) .
			$boxElement
				->copy()
				->addClass($prefix . 'js-box-active ' . $prefix . 'box-active')
				->text(Language::get('first'))
		); ?>

	<!-- number -->

	<?php for ($i = 2; $i < 5; $i++): ?>

		<?php echo $setElement->html(
			$titleElement->text(Language::get($i, '_number')) .
			$boxElement->text(Language::get($i, '_number'))
		); ?>

	<?php endfor; ?>

	<!-- last -->

	<?php echo $setElement
		->copy()
		->html(
			$titleElement->text(Language::get('last')) .
			$boxElement->text(Language::get('last'))
		); ?>
</div>
