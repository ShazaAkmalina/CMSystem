<?php
namespace Redaxscript;

$titlePartialElement = new Html\Element();
$titlePartialElement->init('h3',
[
	'class' => 'rs-title-preview-sub'
]);
$listOrderedElement = new Html\Element();
$listOrderedElement->init('ol',
[
	'class' => 'rs-list-default'
]);
$listUnorderedElement = new Html\Element();
$listUnorderedElement->init('ul',
[
	'class' => 'rs-list-default'
]);
$itemElement = new Html\Element();
$itemElement->init('li');
$outputItem = null;
?>

<!-- collect item output -->

<?php for ($i = 0; $i < 5; $i++): ?>

	<?php $outputItem .= $itemElement
		->copy()
		->text(Language::get($i + 1, '_number')); ?>

<?php endfor; ?>

<!-- list ordered -->

<?php echo $titlePartialElement->text('ol.rs-list-default'); ?>

<?php echo $listOrderedElement->html($outputItem); ?>

<!-- list unordered -->

<?php echo $titlePartialElement->text('ul.rs-list-default'); ?>

<?php echo $listUnorderedElement->html($outputItem); ?>
