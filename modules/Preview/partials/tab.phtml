<?php
namespace Redaxscript;

$suffix = $admin ? '-admin' : '-default';
$titlePartialElement = new Html\Element();
$titlePartialElement->init('h3', array(
	'class' => 'rs-title-preview-sub'
));
$listElement = new Html\Element();
$listElement->init('ul', array(
	'class' => 'rs-js-list-tab rs-list-tab rs-list-tab' . $suffix
));
$boxElement = new Html\Element();
$boxElement->init('div', array(
	'class' => 'rs-js-box-tab rs-box-tab rs-box-tab' . $suffix
));
$itemElement = new Html\Element();
$itemElement->init('li');
$setElement = new Html\Element();
$setElement->init('div', array(
	'class' => 'rs-js-set-tab rs-set-tab rs-set-tab' . $suffix
));
$outputItem = null;
$outputBox = null;
$itemArray = array(
	'rs-item-first',
	'rs-item-second',
	'rs-item-third',
	'rs-item-fourth',
	'rs-item-last'
);
?>

<!-- collect several output -->

<?php foreach ($itemArray as $key => $value): ?>

	<?php $id = 'tab' . $suffix . '-' . $key; ?>

	<?php $outputItem .= $itemElement
		->copy()
		->addClass($key === 0 ? 'rs-js-item-active rs-item-active' : null)
		->addClass($value)
		->html('<a href="' . Registry::get('rewriteRoute') . Registry::get('fullRoute') . '#' . $id . '">' . Language::get($key + 1, '_number') . '</a>'); ?>

	<?php $outputBox .= $setElement
		->copy()
		->addClass($key === 0 ? 'rs-js-set-active rs-set-active' : null)
		->attr('id', $id)
		->text(Language::get($key + 1, '_number')); ?>

<?php endforeach; ?>

<!-- tab -->

<?php echo $titlePartialElement->text('.rs-list-accordion' . $suffix . ' + .rs-box-tab' . $suffix); ?>

<div class="rs-js-tab rs-tab">

	<?php echo $listElement->copy()->html($outputItem); ?>
	<?php echo $boxElement->copy()->html($outputBox); ?>

</div>
