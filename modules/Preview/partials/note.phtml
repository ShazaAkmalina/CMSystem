<?php
namespace Redaxscript;

$titlePartialElement = new Html\Element();
$titlePartialElement->init('h3', array(
	'class' => 'rs-title-preview-sub'
));
$linkElement = new Html\Element();
$linkElement
	->init('a', array(
		'href' => '#'
	))
	->text('link');
$boxElement = new Html\Element();
$boxElement->init('div', array(
	'class' => $admin ? 'rs-admin-box-note' : 'rs-box-note'
));
$textElement = new Html\Element();
$textElement->init('input', array(
	'type' => 'text',
	'class' => $admin ? 'rs-admin-field-default rs-admin-field-text rs-admin-field-note' : 'rs-field-default rs-field-text rs-field-note',
	'placeholder' => 'Placeholder text'
));
$optionNative = '<option>Placeholder text</option>';
$selectElement = new Html\Element();
$selectElement
	->init('select', array(
		'class' => $admin ? 'rs-admin-field-select rs-admin-field-note' : 'rs-field-select rs-field-note',
	))
	->html($optionNative . $optionNative . $optionNative);
$noteArray = array(
	$admin ? 'rs-admin-note-error' : 'rs-note-error',
	$admin ? 'rs-admin-note-warning' : 'rs-note-warning',
	$admin ? 'rs-admin-note-success' : 'rs-note-success',
	$admin ? 'rs-admin-note-info' : 'rs-note-info'
);
$message = 'Plain text and ' . $linkElement . '.';
$messenger = $admin ? new Admin\Messenger() : new Messenger();
$messenger->setAction(Language::get('preview', '_preview'), 'preview#note');
?>

<!--messenger -->

<?php echo $titlePartialElement->text($admin ? '.rs-admin-title-note.rs-admin-note-success + .rs-admin-box-note.rs-admin-note-success' : '.rs-title-note.rs-note-success + .rs-box-note.rs-note-success'); ?>
<?php echo $messenger->success($message, 'Success'); ?>

<?php echo $titlePartialElement->text($admin ? '.rs-admin-title-note.rs-admin-note-warning + .rs-admin-box-note.rs-admin-note-warning' : '.rs-title-note.rs-note-warning + .rs-box-note.rs-note-warning'); ?>
<?php echo $messenger->warning($message, 'Warning'); ?>

<?php echo $titlePartialElement->text($admin ? '.rs-admin-title-note.rs-admin-note-error + .rs-admin-box-note.rs-admin-note-error' : '.rs-title-note.rs-note-error + .rs-box-note.rs-note-error'); ?>
<?php echo $messenger->error($message, 'Error'); ?>

<?php echo $titlePartialElement->text($admin ? '.rs-admin-title-note.rs-admin-note-info + .rs-admin-box-note.rs-admin-note-info' : '.rs-title-note.rs-note-info + .rs-box-note.rs-note-info'); ?>
<?php echo $messenger->info($message, 'Info'); ?>

<!-- text field -->

<form>

	<?php foreach ($noteArray as $value): ?>

		<?php echo $titlePartialElement->text($admin ? '.rs-admin-field-note.' : '.rs-field-note.')->append($value); ?>
		<?php echo $textElement->copy()->addClass($value)->val($value); ?>

	<?php endforeach; ?>

</form>

<!-- select field -->

<form>

	<?php foreach ($noteArray as $value): ?>

		<?php echo $titlePartialElement->text($admin ? '.rs-admin-field-note.' : '.rs-field-note.')->append($value); ?>
		<?php echo $selectElement->copy()->addClass($value)->val($value); ?>

	<?php endforeach; ?>

</form>
