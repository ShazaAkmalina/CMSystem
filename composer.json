{
	"name": "redaxmedia/redaxscript",
	"description": "Ultra lightweight website engine",
	"version": "2.0.0",
	"homepage": "http://redaxscript.com",
	"licence": "GPL-3.0",
	"require":
	{
		"php": ">5.3.2"
	},
	"require-dev":
	{
		"redaxmedia/tocgen": "2.2.1",
		"squizlabs/php_codesniffer": "1.4.5"
	},
	"scripts":
	{
		"post-install-cmd":
		[
			"del composer.lock",
			"npm install"
		],
		"post-update-cmd":
		[
			"del composer.lock",
			"npm update"
		]
	}
}