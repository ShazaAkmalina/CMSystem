{
	"name": "redaxmedia/redaxscript",
	"description": "Ultra lightweight website engine",
	"version": "2.0.0",
	"homepage": "http://redaxscript.com",
	"licence": "GPL-3.0",
	"require":
	{
		"php": ">5.3.2"
	},
	"require-dev":
	{
		"redaxmedia/tocgen": "2.2.1",
		"squizlabs/php_codesniffer": "1.4.5"
		"yohang/dependency-tools": "1.1.0"
	},
	"scripts":
	{
		"post-install-cmd":
		[
			"Yohang\\DependencyTools::installDeps"
		],
		"post-update-cmd":
		[
			"Yohang\\DependencyTools::installDeps"
		]
	},
	"extra":
	{
		"dependency-tools":
		{
			"npm": true
		}
	}
}
